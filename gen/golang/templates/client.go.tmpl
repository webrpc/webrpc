      {{- end}}

      err := doJSONRequest(ctx, c.client, c.urls[{{$i}}], {{$inputVar}}, {{$outputVar}})
      return {{argsList .Outputs "out.Ret"}}{{commaIfLen .Outputs}} err
    }
  {{end}}
