{{define "client_helpers"}}

{{- if .Services}}
// Client

{{- range .Services}}
{{exportKeyword}}class {{.Name}} {
  constructor(hostname, fetch) {
    this.path = '/rpc/{{.Name}}/';
    this.hostname = hostname;
    this.fetch = fetch;
  }

  url(name) {
    return this.hostname + this.path + name;
  }

  {{range .Methods}}
  {{.Name | methodName}}({{.Inputs | methodInputs}} = {}) {
    return this.fetch(
      this.url('{{.Name}}'),
      {{if .Inputs | len}}
      createHTTPRequest(args, headers)
      {{else}}
      createHTTPRequest({}, headers)
      {{end}}
    ).then((res) => {
      if (!res.ok) {
        return throwHTTPError(res);
      }
      return res.json().then((_data) => {
        return {
        {{- $outputsCount := .Outputs|len -}}
        {{- range $i, $output := .Outputs}}
          {{$output | newOutputArgResponse}}{{listComma $i $outputsCount}}
        {{- end}}
        }
      })

    })
  }
  {{end}}
}
{{end -}}

{{end -}}
{{end}}
